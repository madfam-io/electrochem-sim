# =============================================================================
# GALVANA Web - Dockerfile
# =============================================================================
# Multi-stage build for React visualization frontend
# =============================================================================

FROM node:20-alpine AS deps

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/

# Install dependencies
RUN npm ci --legacy-peer-deps

# =============================================================================
# Development Stage
# =============================================================================
FROM node:20-alpine AS dev

WORKDIR /app

COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev", "--prefix", "apps/web"]

# =============================================================================
# Builder Stage
# =============================================================================
FROM node:20-alpine AS builder

WORKDIR /app

COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
COPY . .

# Build the application
RUN npm run build --prefix apps/web

# =============================================================================
# Production Stage
# =============================================================================
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production

# Create non-root user
RUN addgroup --system --gid 1001 galvana \
    && adduser --system --uid 1001 galvana

# Copy built assets
COPY --from=builder --chown=galvana:galvana /app/apps/web/dist ./dist

# Install serve for static file serving
RUN npm install -g serve

USER galvana

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

CMD ["serve", "-s", "dist", "-l", "3000"]
