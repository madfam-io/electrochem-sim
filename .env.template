# Galvana Environment Configuration Template
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# === REQUIRED VARIABLES ===

# Security (MUST CHANGE IN PRODUCTION)
JWT_SECRET_KEY=generate-a-secure-random-key-at-least-32-chars-long
# Generate with: openssl rand -hex 32

# Database
DATABASE_URL=postgresql://galvana:yourpassword@localhost:5432/galvana_dev
POSTGRES_PASSWORD=yourpassword

# Redis
REDIS_URL=redis://:yourredispassword@localhost:6379/0
REDIS_PASSWORD=yourredispassword

# Object Storage (MinIO/S3)
MINIO_ROOT_USER=yourminioadmin
MINIO_ROOT_PASSWORD=yourminioadminpassword

# === OPTIONAL VARIABLES ===

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Security
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
POSTGRES_DB=galvana_dev
POSTGRES_USER=galvana
POSTGRES_PORT=5432
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=50
REDIS_TTL=3600

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=yourminioadmin
S3_SECRET_KEY=yourminioadminpassword
S3_BUCKET=galvana-artifacts
S3_REGION=us-east-1
S3_USE_SSL=false
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Simulation Limits
MAX_SIMULATION_TIME=86400
MAX_MESH_ELEMENTS=10000
SIMULATION_TIMEOUT=3600

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080